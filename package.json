{
  "name": "eslint-plugin-oxfmt",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.26.2",
  "description": "An ESLint plugin that format code via oxfmt.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "oxc",
    "oxfmt",
    "oxlint",
    "prettier"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/eslint-plugin-oxfmt#readme",
  "repository": "ntnyq/eslint-plugin-oxfmt",
  "bugs": {
    "url": "https://github.com/ntnyq/eslint-plugin-oxfmt/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./rule-options": {
      "types": "./dts/rule-options.d.ts"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "dts",
    "workers"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run update:rule-options && tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test build",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsgo --noEmit",
    "update:rule-options": "tsx scripts/udpateRuleOptions.ts"
  },
  "peerDependencies": {
    "eslint": "^9.5.0"
  },
  "dependencies": {
    "generate-differences": "^0.1.1",
    "load-oxfmt-config": "^0.0.2",
    "oxfmt": "^0.20.0",
    "synckit": "^0.11.11"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.8.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251204.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-parser-plain": "^0.1.1",
    "eslint-typegen": "^2.3.0",
    "eslint-vitest-rule-tester": "^3.0.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "show-invisibles": "^0.0.2",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.18.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,vue,yml,yaml,toml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
